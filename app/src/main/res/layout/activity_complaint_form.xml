<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header with Yellow Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFD700"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Complaint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Form Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Complaint About (Dropdown) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint About:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerFacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="@android:color/black"
            android:padding="10dp" />

        <!-- Complaint Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Details:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etComplaintDetails"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Enter complaint details here..."
            android:background="@android:drawable/editbox_background"
            android:gravity="top"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:lines="4"
            android:textColorHint="#555555"
            android:textColor="#222222"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Complaint"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/editext_border"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>