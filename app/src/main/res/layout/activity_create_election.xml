<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateElectionActivity">

    <!-- Election Name -->
    <EditText
        android:id="@+id/etElectionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Election Name"
        android:inputType="text" />

    <!-- Candidates List -->
    <EditText
        android:id="@+id/etCandidates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Candidates (one per line)"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="5"
        android:gravity="top"
        android:background="@android:drawable/editbox_background"/>

    <!-- Start Time -->
    <Button
        android:id="@+id/btnPickStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Start Time" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Time: Not Selected"
        android:padding="8dp" />

    <!-- End Time -->
    <Button
        android:id="@+id/btnPickEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick End Time" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Time: Not Selected"
        android:padding="8dp" />

    <!-- Create Election Button -->
    <Button
        android:id="@+id/btnCreateElection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Election"
        android:backgroundTint="@color/yellow"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>